---
driver:
  name: dokken

provisioner:
  name: dokken

transport:
  name: dokken

verifier:
  name: inspec

platforms:
  # @see https://github.com/someara/dokken-images
  # @see https://hub.docker.com/r/dokken/
  - name: ubuntu-16.04
    driver:
      image: dokken/ubuntu-16.04
  - name: centos-7
    driver:
      image: dokken/centos-7

suites:
  - name: default
    run_list:
      - recipe[<%= cookbook_name %>::default]
    verifier:
      inspec_tests:
        - test/integration/default
    attributes:



---
driver:
 name: docker
 privileged: true
 use_sudo: false

provisioner:
 name: chef_zero
 # You may wish to disable always updating cookbooks in CI or     other testing environments.
 # For example:
 #   always_update_cookbooks: <%%= !ENV['CI'] %>
 always_update_cookbooks: true
 require_chef_omnibus: "13.8.5"

verifier:
 name: inspec

platforms:
 - name: centos-7.2
   driver_config:
     run_command: /usr/lib/systemd/systemd

suites:
 - name: default
   run_list:
     - recipe[<%= cookbook_name %>::default]
   verifier:
     inspec_tests:
       - test/smoke/default
   attributes:
